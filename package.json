{
  "name": "react-flowstate",
  "version": "1.0.0",
  "description": "Get rid of useEffect, useState for data fetching and loading indicator.",
  "author": "Hao Tang <haotang.io@gmail.com> (https://dayoneteams.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/dayoneteams/react-flowstate.git"
  },
  "bugs": {
    "url": "https://github.com/dayoneteams/react-flowstate/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/react-flowstate.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src app",
    "lint:fix": "tsdx lint --fix src app",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "app": "npm i -C ./app && npm run -C ./app start"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/react-flowstate.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-flowstate.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  }
}
